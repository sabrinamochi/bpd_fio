.hidden
    display none           

#select-person
    position relative
    .result
        display none
        .step 
            position relative
            height 60vh
            p
                background-color rgba(255,255,255,1)    
                padding 1rem 
                box-shadow 2px 2px 3px rgba(0,0,0,0.5)
        .overall-boston
            opacity 0
    .assigned-person
        font-size 50px
        width 80%
        line-height 1.5
    .sticky-div
        position sticky
        position -webkit-sticky
        top 8rem
        margin 0 auto
        .graphic 
            display none
    .button-group
        display flex
        justify-content space-between
        margin 3rem 0
        button
            width 45%
            height 3rem
            opacity 0.8
            box-shadow 2px 2px 3px rgba(0,0,0,0.5)
        button:hover
            opacity 0.8
    .selected-neighborhood
        color #D01E11

#large-black, #by-race-conclusion
    display none
    .graphic
        display grid
        grid-template-columns repeat(4, 1fr)
        margin: 6rem 0;
        .black-stop-chart-title
            font-size 12px
            text-align center
        .black-stop-container
            display grid
            justify-content center

#stop-by-race  
    display none
    position relative
    .sticky-div
        position sticky
        position -webkit-sticky
        top 8rem
        margin 0 auto
    .result
        .step 
            position relative
            height 60vh
            p
                background-color rgba(255,255,255,1)    
                padding 1rem 
                box-shadow 2px 2px 3px rgba(0,0,0,0.5)
#conclude
    display none

.white-color
    color #9650A9
.black-color
    color #8DB77D
.selected-person
    opacity 1
    background-color rgba(0,0,0,0.9)
    color rgba(255,255,255,1)
    
.step, #scatter .scroll__text
    pointer-events none

.step
    position relative
    z-index 999
        
.graphic, .scroll__graphic
        margin 3rem auto
        width 100%
svg
    .axis
        .domain
            stroke rgba(0,0,0,0.8)
        .tick line
            opacity 0
        .tick text
            fill rgba(0,0,0,0.8)
    .label
        font-family $sans
        font-size 12px

#black, #suppor-fio, #declined, #scatter, #map1, #map2, #select-person, #large-black .paragraph, #stop-by-race, #by-race-conclusion .paragraph, #conclude
    max-width $column-width
    margin 0 auto
    @media phone
        width 90%