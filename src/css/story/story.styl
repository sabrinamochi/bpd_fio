.selected-person
    opacity 1
    background-color rgba(0,0,0,0.9)
    color rgba(255,255,255,1)
    
.step, .scroll__text
    pointer-events none

.scroll__text
    margin-top 20rem

.step
    position relative
    z-index 999
    height 60vh
    max-width $column-width
    margin 5rem 2rem
    p
        background-color rgba(255,255,255,1)    
        padding 1rem 1.5rem 
        box-shadow 2px 2px 3px rgba(0,0,0,0.8)
        line-height 1.6em

.graphic, .scroll__graphic
        margin 3rem auto

.scroll__graphic
    width 50%
    @media phone
        width 90%
svg
    .axis
        .domain
            stroke rgba(0,0,0,0.8)
        .tick line
            opacity 0
        .tick text
            fill rgba(0,0,0,0.8)
    .label
        font-family $sans
        font-size 12px

.tool-tip 
    position: absolute
    visibility hidden

#black, #suppor-fio, #declined, #map1, .rhone, #map2, #select-person, #large-black .paragraph, #stop-by-race .paragraph, #by-race-conclusion .paragraph, #conclude
