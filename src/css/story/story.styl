/* CUSTOM STORY STYLE */

/* Device media queries */
tablet = "(min-width: 768px) and (max-width: 979px)"
phone = "(max-width: 767px)"

.nav
    width inherit
    margin auto

#content
    line-height 24px

#warren-scroll 
    position relative
    .scroll__img
        height 100vh
        position sticky
        position -webkit-sticky
        top 0
        margin 0 auto
        // width $column-width
        img
            height 100%
            object-fit cover
            -webkit-filter grayscale(80%)
            filter grayscale(80%)
    .scroll__text
        max-width $scroll-column-width
        margin 0 auto
        position relative
    .step 
        height 100vh
        
    @media phone
        .scroll__img
            height 100vh
            img 
                height 100%
                object-fit cover
                object-position center
        .scroll__text
            width 90%

#fio-explain 
    max-width $column-width
    margin 2rem auto
    @media phone
        width 90%

#declined
        .subject-num
            path 
                fill none
                stroke rgba(0,0,0,0.5)
                stroke-width 3px
        .subject-num-circle
            fill rgba(255,255,255,1)
            stroke rgba(0,0,0,0.5)
        
#black
