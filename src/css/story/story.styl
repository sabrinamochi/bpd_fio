    display flex
    @media phone
            display block
    max-width 100%
    .scroll__graphic
        margin 1rem
        position sticky
        position -webkit-sticky
        top 10rem
        align-self start
        .scatter
            cursor pointer
        .more-black-text, .more-white-text
            @media phone
                font-size 7px
        p
            font-size 12px
            font-family $sans
     .scroll__text
        max-width $scroll-column-width
        position relative
    .step 
        height 100vh
        p
            background-color rgba(255,255,255,1)    
            padding 1rem 
            box-shadow 2px 2px 3px rgba(0,0,0,0.5)

